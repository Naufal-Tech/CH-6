<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DASHBOARD</title>
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
</head>
<body>
    <div class="navigation">
        <ul>
            <li class="list active">
                <a href="/user/create">
                    <span class="icon"><ion-icon name="accessibility-outline"></ion-icon></span>
                    <span class="icon">Create User</span>
                </a>
            </li>
            <li class="list">
                <a href="/user/getview">
                    <span class="icon"><ion-icon name="eye-outline"></ion-icon></span>
                    <span class="icon">View User</span>
                </a>
            </li>
            <li class="list">
                <a href="/user/update">
                    <span class="icon"><ion-icon name="create-outline"></ion-icon></span>
                    <span class="icon">Update User</span>
                </a>
            </li>
            <li class="list">
                <a href="/user/delete">
                    <span class="icon"><ion-icon name="trash-outline"></ion-icon></ion-icon></span>
                    <span class="icon">Delete User</span>
                </a>
            </li>
            <li class="list">
                <a href="/game">
                    <span class="icon"><ion-icon name="game-controller-outline"></ion-icon></span>
                    <span class="icon">Gameplay</span>
                </a>
            </li>
            <div class="indicator"></div>
        </ul>
    </div>
    <script>
        const list = document.querySelectorAll('.list');
        function activeLink(){
            list.forEach((item) =>
            item.classList.remove('active'));
            this.classList.add('active');
        }
        list.forEach((item) =>
         item.addEventListener('click', activeLink));

    </script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>